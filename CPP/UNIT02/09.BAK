#include<iostream.h>
#include<stdio.h>
#include<conio.h>
class account
{
  protected:
  char c_name[100];
  long int acc_no;
  char acc_type;

  public:
	    void get()
	    {
	      cout<<"\n Enter Customer Name: ";
	      cin>>c_name;

	      cout<<"\n Enter the Account Number: ";
	      cin>>acc_no;

	      cout<<"\n Enter Account type [s // c]: ";
	      cin>>acc_type;

	      if(acc_type=='C'||acc_type=='c')
	       {
		void c_acc();
	       }
	      else if(acc_type=='S'||acc_type=='s')
	       {
		 void s_acc();
	       }
	      else
	       {
		  cout<<"\n!! NOT VALID CHOICE !!";
	       }
	    }
};

class c_acc:public account
{
  public:

	   long int bal; //bal == balance//

	   void show()
	   {
	       cout<<"\n Balance: "<<bal;
	   }

	   void update()
	   {
	     int c,sub,add;
	     cout<<"\n 1. Withdraw";
	     cout<<"\n 2. Deposit";

	     cout<<"\n Enter your choice: ";
	     cin>>c;

	     if(c==1)
	     {
		cout<<"\n How many rupees you want to Withdraw: ";
		cin>>sub;
		  if(bal>=sub)
		   {
		      cout<<"\n Rs. "<<sub<<" WIthdraw successful. \n\n";
		      bal=bal-sub;
		      show();
		   }
		  else
		   {
		     cout<<"\n!! Insufficient Balance !!";
		   }
	     }

	     else if(c==2)
	      {
		cout<<"\n Enter the Amount you want to Deposit: ";
		cin>>add;

		bal=bal+add;

		 cout<<"\n Rs. "<<add<<" Successfully Deposited";
		 show();
	      }
	     else
	     {
	      cout<<"\n NOT VALID CHOICE ";
	     }
	   }

};

class s_acc:public account
{

	public:
		long int bal; //bal == balance//


	   void show()
	   {
	       cout<<"\n\n  Balance: "<<bal;
	   }

	   void update()
	   {
	     int c,sub,add;
	     cout<<"\n 1. Withdraw";
	     cout<<"\n 2. Deposit";

	     cout<<"\n Enter your choice: ";
	     cin>>c;

	     if(c==1)
	     {
		cout<<"\n How many rupees you want to Withdraw: ";
		cin>>sub;
		  if(bal>=sub)
		   {
		      cout<<"\n Rs. "<<sub<<" Withdraw successful. \n\n";
		      bal=bal-sub;
		      show();
		   }
		  else
		   {
		     cout<<"\n!! Insufficient Balance !!";
		   }
	     }

	     else if(c==2)
	      {
		cout<<"\n Enter the Amount you want to Deposit: ";
		cin>>add;

		bal=bal+add;

		 cout<<"\n Rs. "<<add<<" Successfully Deposited";
		 show();
	      }
	     else
	     {
	      cout<<"\n NOT VALID CHOICE ";
	     }
	    }
	    void interest()
	    {
	     int r;

	     cout<<"\n \n Enter the Rate of Interest: ";
	     cin>>r;

	     bal=bal+((bal*r)/100);
	     show();
	    }
};

